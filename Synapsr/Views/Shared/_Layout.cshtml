@model Synapsr.Models.ViewModels.UserViewModel
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/bundles/styles/bootstrap")
    @Styles.Render("~/bundles/styles/local")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Informatica Aplicata", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="#">Structura Catedrei</a></li>
                    <li><a href="#">Organizr</a></li>
                    <li><a href="#">Slack</a></li>
                    <li>@Html.ActionLink("Timeline", "Timeline", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="container body-content">
        @RenderBody()
    </div>

    <div id="login-modal" class="modal fade" role="dialog">
        <div class="modal-dialog">

            <!-- Modal content-->
            <div class="modal-content">
                <div class="modal-header">
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                    <h4 class="modal-title">Login</h4>
                </div>
                <div class="modal-body">
                    <div class="row">
                        <div class="col-md-12">
                            @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                            {
                                @Html.ValidationSummary(true, "Login Error", new { @class = "alert alert-danger" });
                                @Html.TextBoxFor(u => u.UserName, new { @placeholder = "Username", @class = "form-control" });
                                @Html.PasswordFor(u => u.Password, new { @placeholder = "Password", @class = "form-control" });
                                @Html.CheckBoxFor(u => u.RememberMe, new { @class = "radio" });
                                @Html.LabelFor(u => u.RememberMe, new { @class = "control-label" });
                                <div class="row">
                                    <div class="col-md-12">
                                        <input type="submit" name="login" style="width:100%" class="btn btn-default" value="Login">
                                    </div>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
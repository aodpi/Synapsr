
<div class="row">
    <div class="col-md-6">
        <img src="~/Content/Images/SlackBranding/Slack Monochrome Black.png" width="428" height="200" />
    </div>
    <div class="col-md-6">
        @using (Html.BeginForm("Post", "Slack", FormMethod.Post, new { @enctype = "multipart/form-data" }))
        {

            <div class="form-group">
                <label for="message" class="control-label col-md-4">Message :</label>
                <div class="col-md-8">
                    <input type="text" name="message" class="form-control" />
                </div>
            </div>
            <br />
            <div class="form-group">
                <label for="file" class="control-label col-md-4">Document file</label>
                <div class="col-md-8"><input type="file" name="file" /></div>
            </div>
            <div class="form-group">
                <div class="col-md-12">
                    <input type="submit" value="Submit" class="btn btn-primary" />
                </div>
            </div>
        }
    </div>
</div>
